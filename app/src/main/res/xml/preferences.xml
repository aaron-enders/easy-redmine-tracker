<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="companyName"
        android:summary="@string/pref_summary_companyname_text"
        android:title="@string/pref_title_companyname_text" />
    <EditTextPreference
        android:key="apiKey"
        android:summary="@string/pref_summary_apikey_text"
        android:title="@string/pref_title_apikey_text" />
    <EditTextPreference
        android:key="userId"
        android:inputType="number"
        android:summary="@string/pref_summary_userid_text"
        android:title="@string/pref_title_userid_text" />

    <EditTextPreference
        android:key="username"
        android:inputType="number"
        android:summary="@string/pref_summary_username_text"
        android:title="@string/pref_title_username_text" />
    <EditTextPreference
        android:key="password"
        android:inputType="number"
        android:summary="@string/pref_summary_password_text"
        android:title="@string/pref_title_password_text" />
</PreferenceScreen>